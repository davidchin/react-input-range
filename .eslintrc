rules:
  indent:
    - 2
    - 2
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - always
  react/no-did-update-set-state:
    - 0
  react/sort-comp:
    - 2
    - order
      - lifecycle
      - /^on.+$/
      - render
      - everything-else
env:
  es6: true
  browser: true
  jasmine: true
extends: airbnb
ecmaFeatures:
  jsx: true
  experimentalObjectRestSpread: true
  modules: true
plugins:
  - react
